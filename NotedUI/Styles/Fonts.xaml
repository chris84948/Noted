<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="ControlFont">/Resources/Fonts/#Montserrat</FontFamily>
    <FontWeight x:Key="ControlFontWeight">Normal</FontWeight>

    <FontFamily x:Key="ListViewHeaderFont">/Resources/Fonts/#Cabin SemiBold</FontFamily>
    <FontWeight x:Key="ListViewHeaderFontWeight">SemiBold</FontWeight>

    <FontFamily x:Key="ListViewContentFont">/Resources/Fonts/#Cabin SemiBold</FontFamily>
    <FontWeight x:Key="ListViewContentFontWeight">Normal</FontWeight>

    <FontFamily x:Key="NoteFont">/Resources/Fonts/#Source Code Pro</FontFamily>
    <FontWeight x:Key="NoteFontWeight">Normal</FontWeight>

</ResourceDictionary>